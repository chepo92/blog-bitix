<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ range .Data.Pages }}{{ if .IsPage }}
    <url>
        <loc>{{ .Permalink }}</loc>
        {{ if ne (.Date.Format "0001-01-01T00:00:00+00:00") "0001-01-01T00:00:00+00:00" }}<lastmod>{{ safeHTML ( .Date.Format "0001-01-01T00:00:00+00:00") }}</lastmod>{{ end }}
    </url>
  {{ end }}{{ end }}
</urlset>
